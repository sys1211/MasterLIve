<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tf.masterlive.Activities.MainActivity">
    <FrameLayout
        android:id="@+id/home_fl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_rg"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/home_rb1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/live_item"
            android:text="直播"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@drawable/text_item"
            />
        <RadioButton
            android:id="@+id/home_rb2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/rank_item"
            android:text="社区"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@drawable/text_item"
            />
        <RadioButton
            android:id="@+id/home_rb3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/find_item"
            android:text="我的"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@drawable/text_item"
            />
        <RadioButton
            android:id="@+id/home_rb4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/mine_item"
            android:text="我的"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@drawable/text_item"
            />
    </RadioGroup>
</LinearLayout>
